@model ReviewViewModel

<!-- Display Comments and Ratings -->
<h2> Comments And Ratings</h2>
@if (Model.Comments != null && Model.Ratings != null)
{
    <section>
        @for (int i = 0; i < Model.Comments.Count; i++)
        {
            <div class="user-review">
                <!-- Display Stars -->
                <div class="star-container-display">
                    <div class="container__items">
                        @for (int j = 1; j <= 5; j++)
                        {
                            if (j <= Model.Ratings[i].Rating)
                            {
                                <div class="star-stroke">
                                    <div class="star-fill"></div>
                                </div>
                            }
                            else
                            {
                                <div class="star-stroke">
                                    <div class="star-fill"></div>
                                </div>
                            }
                        }
                    </div>
                </div>
                <!-- Display Rating Number -->
                <div>@Model.Ratings[i].Rating</div>
                <!-- Display Comment -->
                <div>@Model.Comments[i].Comment</div>
            </div>
        }
    </section>
}
else
{
    <section>
        <div>
            <h2>No Comments or Ratings have been added for the movie</h2>
        </div>
    </section>
}
