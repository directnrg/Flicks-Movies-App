@model UploadViewModel

<h1>Upload Movie</h1>

<hr />

        <form asp-action="Upload" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Movie.Title" class="control-label"></label>
                <input asp-for="Movie.Title" class="form-control" required />
                <span asp-validation-for="Movie.Title" class="text-danger"></span>
            </div>
            <div>
                <label class="control-label">Genre</label>
                 <table class="no-border-table">
                    <tbody>
                        <tr>
                            @{
                                int count = 0;
                            }
                            @foreach (MovieGenre genre in Enum.GetValues(typeof(MovieGenre)))
                            {
                                if (count > 0 && count % 5 == 0)
                                {
                                    @:</tr><tr>
                                }

                                <td>
                                    <input type="checkbox" name="SelectedGenres" value="@genre" id="@(genre)"/>
                                    <label class="form-check-label" for="@(genre)">@MovieGenreExtension.EnumToReadableString(genre)</label>
                                </td>

                                count++;
                            }
                        </tr>
                    </tbody>
                 </table>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Directors" class="control-label">Directors (separated with ,)</label>
                <input asp-for="Movie.Directors" class="form-control" required/>
                <span asp-validation-for="Movie.Directors" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.ReleasedDate" class="control-label"></label>
                <input asp-for="Movie.ReleasedDate" class="form-control" type="number" required/>
                <span asp-validation-for="Movie.ReleasedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Thumbnail" class="control-label"></label><br />
                <input asp-for="Movie.Thumbnail" type="file" class="form-control-file" required/>
                <span asp-validation-for="Movie.Thumbnail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Video" class="control-label"></label><br />
                <input asp-for="Movie.Video" type="file" class="form-control-file" required/>
                <span asp-validation-for="Movie.Video" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Upload" class="btn btn-primary" />
            </div>
        </form>

